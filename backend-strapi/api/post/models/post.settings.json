{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "posts",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "is_published": {
      "type": "boolean",
      "default": false
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "article": {
      "type": "richtext",
      "required": true
    },
    "featured_image": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    }
  }
}
